<div class="container">
  <h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 1rem;">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "form-label" },
                  input_class: "form-control" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label_html: { class: "form-label" },
                  input_class: "form-control" %>
      <%= f.input :remember_me,
                  as: :boolean,
                  label: "Remember me",
                  wrapper_html: { class: "form-check" },
                  label_html: { class: "form-check-label" },
                  input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>